<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="WardrobeWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <property name="top-bar-style">1</property>
        <child type="top">
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkDropDown" id="menus"/>
            </child>
            <child>
              <object class="GtkSpinner" id="spinner">
                <property name="margin-start">10</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox">
                <child>
                  <object class="GtkMenuButton">
                    <property name="primary">True</property>
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Menu</property>
                    <property name="menu-model">primary_menu</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="AdwOverlaySplitView" id="page">
            <property name="sidebar">
              <object class="AdwStatusPage">
                <property name="child">
                  <object class="GtkBox" id="tab_buttons">
                    <property name="orientation">1</property>
                    <property name="spacing">18</property>
                    <child>
                      <object class="GtkToggleButton" id="tab_button1">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Shell</property>
                            <property name="icon-name">shell-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">0</property>
                        <property name="active">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="tab_button2">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Icon</property>
                            <property name="icon-name">app-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">1</property>
                        <property name="group">tab_button1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="tab_button3">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Interface</property>
                            <property name="icon-name">interface-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">2</property>
                        <property name="group">tab_button1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="tab_button4">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Cursor</property>
                            <property name="icon-name">cursor-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">3</property>
                        <property name="group">tab_button1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="tab_button5">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Wallpaper</property>
                            <property name="icon-name">wallpaper-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">4</property>
                        <property name="group">tab_button1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="tab_button6">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="label" translatable="yes">Search</property>
                            <property name="icon-name">search-symbolic</property>
                          </object>
                        </child>
                        <property name="vexpand">true</property>
                        <property name="name">5</property>
                        <property name="group">tab_button1</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
            <property name="content">
              <object class="AdwStatusPage">
                <child>
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="valign">3</property>
                    <property name="spacing">18</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Wardrobe</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
