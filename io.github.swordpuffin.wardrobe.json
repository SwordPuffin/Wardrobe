{
    "id" : "io.github.swordpuffin.wardrobe",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "wardrobe",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=host:ro",
        "--filesystem=home"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
    		"name": "libportal",
		"buildsystem": "meson",
		"config-opts": [
			"-Dtests=false",
			"-Dbackend-gtk3=disabled",
			"-Dbackend-gtk4=enabled",
			"-Dbackend-qt5=disabled",
			"-Ddocs=false"
	         ],
		 "sources": [
	          {
	          "type": "archive",
	          "url": "https://github.com/flatpak/libportal/releases/download/0.9.1/libportal-0.9.1.tar.xz",
                  "sha256": "de801ee349ed3c255a9af3c01b1a401fab5b3fc1c35eb2fd7dfb35d4b8194d7f"
         	  }
		  ]
	},
        {
            "name" : "wardrobe",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SwordPuffin/Wardrobe.git",
                    "tag" : "v1.0.0"
                }
            ]
        }
    ]
}
